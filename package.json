{
  "name": "uns-kit",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for the UNS toolkit (core runtime and plugin packages)",
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "core:version:patch": "cd packages/uns-core; pnpm version patch",
    "core:build": "pnpm --filter @uns-kit/core build",
    "core:publish": "pnpm publish --filter @uns-kit/core --access public",
    "api:version:patch": "cd packages/uns-api; pnpm version patch",
    "api:build": "pnpm --filter @uns-kit/api build",
    "api:publish": "pnpm publish --filter @uns-kit/api --access public",
    "cron:version:patch": "cd packages/uns-cron; pnpm version patch",
    "cron:build": "pnpm --filter @uns-kit/cron build",
    "cron:publish": "pnpm publish --filter @uns-kit/cron --access public",
    "temporal:version:patch": "cd packages/uns-temporal; pnpm version patch",
    "temporal:build": "pnpm --filter @uns-kit/temporal build",
    "temporal:publish": "pnpm publish --filter @uns-kit/temporal --access public",
    "cli:version:patch": "cd packages/uns-cli; pnpm version patch",
    "cli:build": "pnpm --filter @uns-kit/cli build",
    "cli:publish": "pnpm publish --filter @uns-kit/cli --access public",
    "sandbox:create": "pnpm --filter @uns-kit/cli build && node packages/uns-cli/dist/index.js create sandbox-app"
  },
  "author": "Aljosa Vister",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/uns-datahub/uns-kit.git"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@graphql-codegen/cli": "^5.0.6",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.15.29",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "azure-devops-node-api": "^15.1.0",
    "chalk": "^5.4.1",
    "eslint": "^9.28.0",
    "fs-extra": "^11.3.0",
    "globals": "^16.2.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "prettier": "^3.5.3",
    "simple-git": "^3.27.0",
    "tsx": "^4.20.5",
    "vite": "^6.3.5",
    "vitest": "^3.2.0",
    "zod-to-json-schema": "^3",
    "zod-to-ts": "^1.2.0"
  }
}
