{
  "name": "uns-kit",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for the UNS toolkit (core runtime and plugin packages)",
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "core:version:patch": "cd packages/uns-core; pnpm version patch",
    "core:build": "pnpm --filter @uns-kit/core build",
    "core:publish": "pnpm publish --filter @uns-kit/core --access public",
    "api:version:patch": "cd packages/uns-api; pnpm version patch",
    "api:build": "pnpm --filter @uns-kit/api build",
    "api:publish": "pnpm publish --filter @uns-kit/api --access public",
    "cron:version:patch": "cd packages/uns-cron; pnpm version patch",
    "cron:build": "pnpm --filter @uns-kit/cron build",
    "cron:publish": "pnpm publish --filter @uns-kit/cron --access public",
    "temporal:version:patch": "cd packages/uns-temporal; pnpm version patch",
    "temporal:build": "pnpm --filter @uns-kit/temporal build",
    "temporal:publish": "pnpm publish --filter @uns-kit/temporal --access public",
    "cli:version:patch": "cd packages/uns-cli; pnpm version patch",
    "cli:build": "pnpm --filter @uns-kit/cli build",
    "cli:publish": "pnpm publish --filter @uns-kit/cli --access public",
    "py:install": "cd packages/uns-py && poetry install",
    "py:lint": "cd packages/uns-py && poetry run ruff check .",
    "py:test": "cd packages/uns-py && poetry run pytest",
    "py:build": "cd packages/uns-py && poetry build",
    "py:version:patch": "cd packages/uns-py && poetry version patch",
    "py:publish": "cd packages/uns-py && PYPI_TOKEN=${PYPI_TOKEN} poetry publish --username __token__ --password $PYPI_TOKEN",
    "ts:version:patch": "pnpm run core:version:patch && pnpm run api:version:patch && pnpm run cron:version:patch && pnpm run temporal:version:patch && pnpm run cli:version:patch",
    "ts:build": "pnpm --filter @uns-kit/core build && pnpm --filter @uns-kit/api build && pnpm --filter @uns-kit/cron build && pnpm --filter @uns-kit/temporal build && pnpm --filter @uns-kit/cli build",
    "ts:publish": "pnpm publish --filter @uns-kit/core --access public && pnpm publish --filter @uns-kit/api --access public && pnpm publish --filter @uns-kit/cron --access public && pnpm publish --filter @uns-kit/temporal --access public && pnpm publish --filter @uns-kit/cli --access public"
  },
  "author": "Aljosa Vister",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/uns-datahub/uns-kit.git"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.36.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.18.6",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "azure-devops-node-api": "^15.1.1",
    "chalk": "^5.6.2",
    "eslint": "^9.36.0",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "prettier": "^3.6.2",
    "simple-git": "^3.28.0",
    "tsx": "^4.20.5",
    "vite": "^6.3.6",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.24.6",
    "zod-to-ts": "^1.2.0"
  },
  "pnpm": {
    "overrides": {
      "sandbox-app>@uns-kit/core": "workspace:^",
      "sandbox-app>@uns-kit/api": "workspace:^",
      "sandbox-app>@uns-kit/cron": "workspace:^",
      "sandbox-app>@uns-kit/temporal": "workspace:^"
    }
  },
  "dependencies": {
    "@uns-kit/api": "^0.0.1"
  }
}
