{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc: build",
      "type": "shell",
      "command": "pnpm",
      "args": ["tsc", "-p", "tsconfig.json"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "silent"
      }
    },
    {
      "label": "tsc: watch",
      "type": "shell",
      "command": "pnpm",
      "args": ["tsc", "-p", "tsconfig.json", "-w", "--preserveWatchOutput"],
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "reveal": "silent"
      }
    }
  ]
}
