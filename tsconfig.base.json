{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "allowImportingTsExtensions": false,
    "strict": false,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@uns-kit/core": ["packages/uns-core/src/index.ts"],
      "@uns-kit/core/*": ["packages/uns-core/src/*"],
      "@uns-kit/cron": ["packages/uns-cron/src/index.ts"],
      "@uns-kit/cron/*": ["packages/uns-cron/src/*"],
      "@uns-kit/api": ["packages/uns-api/src/index.ts"],
      "@uns-kit/api/*": ["packages/uns-api/src/*"],
      "@uns-kit/temporal": ["packages/uns-temporal/src/index.ts"],
      "@uns-kit/temporal/*": ["packages/uns-temporal/src/*"]
    }
  }
}
